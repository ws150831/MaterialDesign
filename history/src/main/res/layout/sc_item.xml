<?x    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    ml version="1.0" encoding="utf-8"?>
<com.six.history.view.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="center_vertical"
    android:background="#fff"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:padding="5dp"
            card_view:cardBackgroundColor="#fff"
            card_view:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/collection_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="名字"
                        android:textColor="#ff4343" />

                    <TextView
                        android:id="@+id/collection_context"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="介绍"
                        android:textColor="#000" />
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    card_view:cardBackgroundColor="#f2f2f2"
                    card_view:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/collection_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/s6" />
                </android.support.v7.widget.CardView>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>


    <Button
        android:id="@+id/btnDelete"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="#f90f"
        android:text="删除"
        android:textColor="@android:color/white" />
</com.six.history.view.SwipeMenuLayout>










